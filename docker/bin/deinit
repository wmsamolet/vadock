#!/bin/bash

function info {
  echo "----------------------------------------------------------------------"
  echo " "
  echo "--> $1"
  echo " "
  echo "----------------------------------------------------------------------"
}

info "DOCKER DEINIT"

#---------------------------------------------------------------------------------#

PROJECT_NAME="default"

if [ ! -z "$1" ]
  then PROJECT_NAME=$1
  else
    read -p "PROJECT_NAME [example: default]: " INPUT_PROJECT_NAME
fi

if [ ! -z ${INPUT_PROJECT_NAME} ]
then
    PROJECT_NAME=${INPUT_PROJECT_NAME}
fi

echo "[PROJECT_NAME]: ${PROJECT_NAME}"
echo

#---------------------------------------------------------------------------------#

COMPOSE_FILE=""

if [ ! -z "$2" ]
  then COMPOSE_FILE=$2
  else
    read -p "COMPOSE_FILE [example: php]: " INPUT_COMPOSE_FILE
fi

if [ ! -z ${INPUT_COMPOSE_FILE} ]
then
    COMPOSE_FILE=${INPUT_COMPOSE_FILE}
fi

echo "[COMPOSE_FILE]: ${COMPOSE_FILE}"
echo

#---------------------------------------------------------------------------------#

VDK_PATH="$( cd "$(dirname "$0")"/../../ ; pwd -P )"
PROJECT_NAME_PATH=${VDK_PATH}/config/${PROJECT_NAME}

#---------------------------------------------------------------------------------#

(cd ${PROJECT_NAME_PATH} && env VDK_PROJECT_NAME=${PROJECT_NAME} docker-compose -p ${PROJECT_NAME} -f ${PROJECT_NAME_PATH}/docker/compose/${COMPOSE_FILE}.yml down -v --rmi=all)
