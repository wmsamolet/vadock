#!/bin/bash

function info {
  echo "----------------------------------------------------------------------------"
  echo " "
  echo "--> $1"
  echo " "
  echo "----------------------------------------------------------------------------"
}

info "DOCKER INIT (UP + BUILD) ${1}"

#---------------------------------------------------------------------------------#

VDK_COMPOSE_SUFFIX=""

if [ ! -z "$1" ]
  then VDK_COMPOSE_SUFFIX="."$1
  else
    read -p "VDK_COMPOSE_SUFFIX [example: php71]: " INPUT_VDK_COMPOSE_SUFFIX
fi

if [ ! -z ${INPUT_VDK_COMPOSE_SUFFIX} ]
then
    VDK_COMPOSE_SUFFIX="."${INPUT_VDK_COMPOSE_SUFFIX}
fi

echo "[VDK_COMPOSE_SUFFIX]: ${VDK_COMPOSE_SUFFIX}"
echo

#---------------------------------------------------------------------------------#

VDK_PATH="$( cd "$(dirname "$0")"/../ ; pwd -P )"

if [ ! -z "$2" ]
  then VDK_PATH=$2
  else
    read -p "VDK_PATH [${VDK_PATH}]: " INPUT_VDK_PATH
fi

if [ ! -z ${INPUT_VDK_PATH} ]
then
    VDK_PATH=${INPUT_VDK_PATH}
fi

echo "[VDK_PATH]: ${VDK_PATH}"
echo

#---------------------------------------------------------------------------------#

(cd ${VDK_PATH} && docker-compose -p ${VDK_PATH} -f ${VDK_PATH}/docker-compose"${VDK_COMPOSE_SUFFIX}".yml up -d --build)

docker ps
